<Page
    x:Class="storeEmpowerment.ProductOverview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:storeEmpowerment"
    xmlns:drawerLayout="using:DrawerLayout"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Title Bar -->
        <Grid x:Name="TitleBar" Background="Gray"  Grid.Row ="0" Height="50">

            <Canvas x:Name="canvas" Height="50" VerticalAlignment="Top" RenderTransformOrigin="0.509,-0.255" Background="#FF8EB4E3">
                <Image x:ConnectionId='8' x:Name="searchIcon" Height="33" Width="20" Source="Assets/icon_search.png" Canvas.Top="10" Canvas.Left="10"                         />
                <!--<Image x:Name="empowImage2" Height="78" Width="100" Source="Assets/EmpowLogo.png" Canvas.Top="12" Canvas.Left="10"/>-->
                <Image x:ConnectionId='9' x:Name="scanIcon"                      Height="33" Width="25" Source="Assets/icon_scan.png" Canvas.Top="10" Canvas.Left="10"/>
                <Image x:ConnectionId='10' Source="Assets/ic_drawer.png" Height="35" Canvas.Top="10" Width="Auto"                           />
                <Image x:ConnectionId='11' Source="Assets/backImg.png" Height="45" Width="40"  Canvas.Left="20" x:Name="backImage"                          />
                <TextBlock x:Name="myOrders1" IsTextScaleFactorEnabled="False" Canvas.Left="150" TextWrapping="Wrap" Text="Product Detail" Canvas.Top="15" Height="33" Width="162" HorizontalAlignment="Left" FontSize="20"/>
            </Canvas>
        </Grid>
        <ScrollViewer Background="White" Grid.Row="1">

            <!--<Grid Background="White">-->

            <StackPanel x:Name="outer">
                
                <Canvas Height="10">
                </Canvas>
                <Border x:Name="productOverviewBoorder"  Background="White" BorderBrush="Black" BorderThickness="1" >
                    <StackPanel   Orientation="Vertical">
                        <Canvas VerticalAlignment="Top"  x:Name="productOverviewCanvas" Background="#2566A2 ">
                            <TextBlock FontSize="20" Height="30" VerticalAlignment="Center" Margin="9,0,0,0" IsTextScaleFactorEnabled="False" x:Name="productOverviewTextBlock" Foreground="White" Padding="1">Product Overview</TextBlock>

                        </Canvas>
                        <TextBlock x:Name="productName" Margin="4,0,0,0" FontSize="20" IsTextScaleFactorEnabled="False" Padding="05" TextWrapping="Wrap" Canvas.Top="05" Foreground="Black"></TextBlock>
                        <StackPanel x:Name="hpanel"  Orientation="Horizontal" >
                            <StackPanel Orientation="Vertical">

                                <TextBlock x:Name="productId" Margin="4,0,0,0" FontSize="20" IsTextScaleFactorEnabled="False" Padding="05" Foreground="#4169E1">0782555385\0001</TextBlock>
                                <TextBlock x:Name="productPrice" Margin="4,0,0,0" FontSize="20" IsTextScaleFactorEnabled="False" Padding="05" Foreground="Black"> 4$</TextBlock>
                            </StackPanel>
                            <Image x:Name="productImage" HorizontalAlignment="Left" Margin="180,0,0,20" Source=""></Image>
                        </StackPanel>
                        <Canvas VerticalAlignment="Top" Height="30" x:Name="stockedUntilCanvas" Background="#FFDDDD" Visibility="Collapsed">
                            <Image Source="Assets/warning.png" Height="33" Width="25"></Image>
                            <TextBlock x:Name="stockedUntil" Margin="4,0,0,0" FontSize="20" IsTextScaleFactorEnabled="False" Padding="05" Foreground="Black" Text=" Stocked Until" Visibility="Collapsed" ></TextBlock>
                        </Canvas>
                        <Canvas VerticalAlignment="Top" Height="05" x:Name="blank1" Background="White" Visibility="Collapsed"></Canvas>
                        <Canvas VerticalAlignment="Top" Height="30" x:Name="negativeStockCanvas" Background="#FFDDDD" Visibility="Collapsed">
                            <Image Source="Assets/warning.png" Height="33" Width="25"></Image>
                            <TextBlock x:Name="negativeStock" Margin="4,0,0,0" FontSize="20" IsTextScaleFactorEnabled="False" Padding="05" Foreground="Black" Text="    Negative stock quantity recorded" Visibility="Collapsed" ></TextBlock>
                        </Canvas>
                        <Canvas VerticalAlignment="Top" Height="05" x:Name="blank2" Background="White" Visibility="Collapsed"></Canvas>

                        <Canvas VerticalAlignment="Top" Height="30" x:Name="zeroStockCanvas" Background="#FFDDDD" Visibility="Collapsed">
                            <Image Source="Assets/warning.png" Height="33" Width="25"></Image>
                            <TextBlock x:Name="zeroStock" Margin="4,0,0,0" FontSize="20" IsTextScaleFactorEnabled="False" Padding="05" Foreground="Black" Text="    Zero stock of this product" Visibility="Collapsed" ></TextBlock>
                        </Canvas>
                        <Canvas VerticalAlignment="Top" Height="05" x:Name="blank3" Background="White" Visibility="Collapsed"></Canvas>

                        <Canvas VerticalAlignment="Top" Height="30" x:Name="noLocationsDefinedCanvas" Background="#FFDDDD" Visibility="Collapsed">
                            <Image Source="Assets/warning.png" Height="33" Width="25"></Image>
                            <TextBlock x:Name="noLocationsDefined" Margin="4,0,0,0" FontSize="20" IsTextScaleFactorEnabled="False" Padding="05" Foreground="Black" Text="    No locations defined" Visibility="Collapsed" ></TextBlock>
                        </Canvas>
                        <Canvas VerticalAlignment="Top" Height="05" x:Name="blank4" Background="White" Visibility="Collapsed"></Canvas>

                        <Canvas VerticalAlignment="Top" Height="30" x:Name="noShelfCapacityCanvas" Background="#FFDDDD" Visibility="Collapsed">
                            <Image Source="Assets/warning.png" Height="33" Width="25"></Image>
                            <TextBlock x:Name="noShelfCapacity" Margin="4,0,0,0" FontSize="20" IsTextScaleFactorEnabled="False" Padding="05" Foreground="Black" Text="    No shelf capacity" Visibility="Collapsed" ></TextBlock>
                        </Canvas>
                    </StackPanel>

                </Border>
                
                <Border x:Name="currentStockBorder"  Background="White" BorderBrush="Black" BorderThickness="1">
                    <StackPanel x:Name="currentPanel" Visibility="Collapsed">
                        <Canvas VerticalAlignment="Top"  x:Name="currentStock" Background="#2566A2">
                            <TextBlock FontSize="20" Height="30" VerticalAlignment="Center" Margin="9,0,0,0" IsTextScaleFactorEnabled="False"  x:Name="currentStockTextBlock"  Text="Current Stock(Cases/Singles)" Foreground="White" Padding="1"></TextBlock>

                        </Canvas>


                        <ListView  ItemsSource="{Binding }" x:Name="currentStockListView"  Height="Auto">

                            <ListView.ItemContainerStyle>
                                <Style x:Name="currentStockItemStyle" TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />


                                    <Setter x:Name="paddinProp" Property="Padding" Value="10,10,10,10"/>

                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="Height" Value="60"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
                                    <!--l,t,r,b-->
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Grid Background="White" x:Name="list">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>

                                        </Grid.ColumnDefinitions>

                                        <TextBlock x:Name="input" Text="{Binding stockName}" Canvas.Left="1" Foreground="#4169E1" Grid.Column="0" ></TextBlock>
                                        <TextBlock x:Name="inp2" Text="{Binding stock}"  Foreground="Black" HorizontalAlignment="Right" Grid.Column="1"></TextBlock>
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                            
                        </ListView>
                    </StackPanel>
                </Border>

                <Border x:Name="promotionBorder"   Background="White" BorderBrush="Black" BorderThickness="1">
                    <StackPanel x:Name="promo" Visibility="Collapsed">
                        <Canvas VerticalAlignment="Top"  x:Name="promotionCanvas" Background="#2566A2">
                            <TextBlock FontSize="20" Height="30" VerticalAlignment="Center" Margin="9,0,0,0" IsTextScaleFactorEnabled="False" x:Name="promotionTextBlock" Foreground="White" Padding="1">Promotion</TextBlock>

                        </Canvas>
                        <Canvas VerticalAlignment="Top" Height="30" x:Name="promotioncolorCanvas" Background="#FFFFDD">
                            <TextBlock FontSize="16" Margin="7,0,0,0" VerticalAlignment="Center" Canvas.Top="2" IsTextScaleFactorEnabled="False" x:Name="promotionColorBlock" Foreground="Black" Padding="1"></TextBlock>
                        </Canvas>
                        <ListView  x:Name="promotionListView" ItemsSource="{Binding}"  Height="Auto">

                            <ListView.ItemContainerStyle>
                                <Style x:Name="promotionItemStyle" TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />


                                    <Setter x:Name="paddinProperty" Property="Padding" Value="10,10,10,10"/>

                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="Height" Value="60"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
                                    <!--l,t,r,b-->
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Grid Background="White" x:Name="list">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>

                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding column1}" Foreground="#4169E1" Grid.Column="0" ></TextBlock>
                                        <TextBlock Text="{Binding column2}" Foreground="Black" Grid.Column="1" HorizontalAlignment="Right"></TextBlock>
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <Border x:Name="promotionBorder1"   Background="White" BorderBrush="Black" BorderThickness="1">
                    <StackPanel x:Name="promo1" Visibility="Collapsed">
                        <Canvas VerticalAlignment="Top"  x:Name="promotionCanvas1" Background="#2566A2">
                            <TextBlock FontSize="20" Margin="9,0,0,0" VerticalAlignment="Center" Height="30" IsTextScaleFactorEnabled="False" x:Name="promotionTextBlock1" Foreground="White" Padding="1">Promotion</TextBlock>

                        </Canvas>
                        <Canvas VerticalAlignment="Top" Height="30" x:Name="promotioncolorCanvas1" Background="#FFFFDD">
                            <TextBlock FontSize="16" Margin="9,0,0,0"  VerticalAlignment="Center" Canvas.Top="2" IsTextScaleFactorEnabled="False" x:Name="promotionColorBlock1" Foreground="Black" Padding="1"></TextBlock>
                        </Canvas>
                        <ListView  x:Name="promotionListView1" ItemsSource="{Binding}"  Height="Auto">

                            <ListView.ItemContainerStyle>
                                <Style x:Name="promotionItemStyle1" TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />


                                    <Setter x:Name="paddinProperty1" Property="Padding" Value="10,10,10,10"/>

                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="Height" Value="60"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
                                    <!--l,t,r,b-->
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Grid Background="White" x:Name="list">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>

                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding column1}" Foreground="#4169E1" Grid.Column="0" ></TextBlock>
                                        <TextBlock Text="{Binding column2}" Foreground="Black" Grid.Column="1" HorizontalAlignment="Right"></TextBlock>
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <Border x:Name="promotionBorder2"   Background="White" BorderBrush="Black" BorderThickness="1">
                    <StackPanel x:Name="promo2" Visibility="Collapsed">
                        <Canvas VerticalAlignment="Top"  x:Name="promotionCanvas2" Background="#2566A2">
                            <TextBlock FontSize="20" Margin="9,0,0,0" VerticalAlignment="Center" Height="30" IsTextScaleFactorEnabled="False" x:Name="promotionTextBlock2" Foreground="White" Padding="1">Promotion</TextBlock>

                        </Canvas>
                        <Canvas VerticalAlignment="Top" Height="30"  x:Name="promotioncolorCanvas2" Background="#FFFFDD">
                            <TextBlock FontSize="16" Margin="9,0,0,0" VerticalAlignment="Center" Canvas.Top="2" IsTextScaleFactorEnabled="False" x:Name="promotionColorBlock2" Foreground="Black" Padding="1"></TextBlock>
                        </Canvas>
                        <ListView  x:Name="promotionListView2" ItemsSource="{Binding}"  Height="Auto">

                            <ListView.ItemContainerStyle>
                                <Style x:Name="promotionItemStyle2" TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />


                                    <Setter x:Name="paddinProperty2" Property="Padding" Value="10,10,10,10"/>

                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="Height" Value="60"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
                                    <!--l,t,r,b-->
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Grid Background="White" x:Name="list">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>

                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding column1}" Foreground="#4169E1" Grid.Column="0" ></TextBlock>
                                        <TextBlock Text="{Binding column2}" Foreground="Black" Grid.Column="1" HorizontalAlignment="Right"></TextBlock>
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <Border x:Name="promotionBorder3"   Background="White" BorderBrush="Black" BorderThickness="1">
                    <StackPanel x:Name="promo3" Visibility="Collapsed">
                        <Canvas VerticalAlignment="Top"  x:Name="promotionCanvas3" Background="#2566A2">
                            <TextBlock FontSize="20" Margin="9,0,0,0" VerticalAlignment="Center" Height="30" IsTextScaleFactorEnabled="False" x:Name="promotionTextBlock3" Foreground="White" Padding="1">Promotion</TextBlock>

                        </Canvas>
                        <Canvas VerticalAlignment="Top" Height="30" x:Name="promotioncolorCanvas3" Background="#FFFFDD">
                            <TextBlock FontSize="16" Margin="9,0,0,0" VerticalAlignment="Center" Canvas.Top="2" IsTextScaleFactorEnabled="False" x:Name="promotionColorBlock3" Foreground="Black" Padding="1"></TextBlock>
                        </Canvas>
                        <ListView  x:Name="promotionListView3" ItemsSource="{Binding}"  Height="Auto">

                            <ListView.ItemContainerStyle>
                                <Style x:Name="promotionItemStyle3" TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />


                                    <Setter x:Name="paddinProperty3" Property="Padding" Value="10,10,10,10"/>

                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="Height" Value="60"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
                                    <!--l,t,r,b-->
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Grid Background="White" x:Name="list">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>

                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding column1}" Foreground="#4169E1" Grid.Column="0" ></TextBlock>
                                        <TextBlock Text="{Binding column2}" Foreground="Black" Grid.Column="1" HorizontalAlignment="Right"></TextBlock>
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>


                <Border x:Name="deliveryBorder"   Background="White" BorderBrush="Black" BorderThickness="1">
                    <StackPanel x:Name="deliveryPanel"  Visibility="Collapsed">

                        <!-- <Canvas VerticalAlignment="Top"  x:Name="deliveryCanvas" Background="#2566A2">
                        <TextBlock FontSize="20" IsTextScaleFactorEnabled="False" x:Name="deliveryTextBlock" Foreground="White" Canvas.Top="05">Delivery(Singles)</TextBlock>
                    </Canvas>-->
                        <ListView  x:Name="ListView"  Height="Auto" ItemsSource="{Binding}">

                            <ListView.HeaderTemplate >
                                <DataTemplate  >
                                    <Grid Background="#2566A2" Height="30" >

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock x:Name="delText" Margin="9,0,0,0" Text="{Binding delivery}" Padding="1" IsTextScaleFactorEnabled="False" Grid.Column="0" VerticalAlignment="Center"  FontSize="20" Foreground="White"></TextBlock>
                                        <TextBlock x:Name="d_date" Text="{Binding date}"  Padding="1" IsTextScaleFactorEnabled="False"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="20" Foreground="White"></TextBlock>
                                        <TextBlock x:Name="d_quantity" Text="{Binding quantity}"  Padding="1" Grid.Column="2" IsTextScaleFactorEnabled="False" HorizontalAlignment="Right" VerticalAlignment="Center"  FontSize="20" Foreground="White"></TextBlock>
                                        
                                    </Grid>
                                </DataTemplate>
                            </ListView.HeaderTemplate>

                            <ListView.ItemContainerStyle>
                                <Style x:Name="deliveryItemStyle" TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />


                                    <Setter x:Name="deliverypaddinProperty" Property="Padding" Value="10,10,10,10"/>

                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="Height" Value="60"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="IsTextScaleFactorEnabled" Value="False"/>

                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Grid Background="White" x:Name="deliverylist">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding delivery}" IsTextScaleFactorEnabled="False" Foreground="#4169E1" Grid.Column="0" ></TextBlock>
                                        <TextBlock Text="{Binding date}" Foreground="Black" Grid.Column="1" IsTextScaleFactorEnabled="False" HorizontalAlignment="Right"></TextBlock>
                                        <TextBlock Text="{Binding quantity}" Foreground="Black" Grid.Column="2" HorizontalAlignment="Right" IsTextScaleFactorEnabled="False"></TextBlock>
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
                
                <Border x:Name="saleBorder"   Background="White" BorderBrush="Black" BorderThickness="1">
                    <StackPanel x:Name="salePanel"  Visibility="Collapsed">

                        <!-- <Canvas VerticalAlignment="Top"  x:Name="deliveryCanvas" Background="#2566A2">
                        <TextBlock FontSize="20" IsTextScaleFactorEnabled="False" x:Name="deliveryTextBlock" Foreground="White" Canvas.Top="05">Delivery(Singles)</TextBlock>
                    </Canvas>-->
                        <ListView  x:Name="saleListView"  Height="Auto" ItemsSource="{Binding}">

                            <ListView.HeaderTemplate >
                                <DataTemplate  >
                                    <Grid Background="#2566A2" Height="30" >

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding day}" Margin="9,0,0,0" Grid.Column="0"  Padding="1" VerticalAlignment="Center"  FontSize="20" Foreground="White" IsTextScaleFactorEnabled="False" ></TextBlock>
                                        <TextBlock  Text="{Binding expected}" Grid.Column="1"  Padding="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Foreground="White" IsTextScaleFactorEnabled="False" ></TextBlock>
                                        <TextBlock  Text="{Binding actual}" Grid.Column="2"  Padding="1" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="20" Foreground="White" IsTextScaleFactorEnabled="False"></TextBlock>

                                    </Grid>
                                </DataTemplate>
                            </ListView.HeaderTemplate>

                            <ListView.ItemContainerStyle>
                                <Style x:Name="saleItemStyle" TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />


                                    <Setter x:Name="salepaddinProperty" Property="Padding" Value="10,10,10,10"/>

                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="Height" Value="60"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="IsTextScaleFactorEnabled" Value="False"/>

                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Grid Background="White" x:Name="deliverylist">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding day}" IsTextScaleFactorEnabled="False" Foreground="#4169E1" Grid.Column="0" ></TextBlock>
                                        <TextBlock Text="{Binding expected}" Foreground="Black" IsTextScaleFactorEnabled="False" Grid.Column="1" HorizontalAlignment="Right"></TextBlock>
                                        <TextBlock Text="{Binding actual}" Foreground="Black" Grid.Column="2" IsTextScaleFactorEnabled="False" HorizontalAlignment="Right"></TextBlock>
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
                <Border x:Name="shelfDetailsBorder"  Background="White" BorderBrush="Black" BorderThickness="1">
                    <StackPanel x:Name="shelfPanel" Visibility="Collapsed">
                        <!--  <Canvas VerticalAlignment="Top"  x:Name="shelfDetailsCanvas" Background="#2566A2">
                        <TextBlock FontSize="20" IsTextScaleFactorEnabled="False" x:Name="shelfDetailsTextBlock" Foreground="White" Canvas.Top="05">ShelfDetails</TextBlock>
                    </Canvas>-->
                        <ListView  x:Name="ListView1"  Height="Auto" ItemsSource="{Binding}">
                            <ListView.HeaderTemplate >
                                <DataTemplate  >
                                    <Grid Background="#2566A2" Height="30" >

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Shelf Details" Grid.Column="0" Margin="9,0,0,0"  Padding="1" VerticalAlignment="Center"  FontSize="20" IsTextScaleFactorEnabled="False" Foreground="White"></TextBlock>
                                        <TextBlock Text="Facings" Grid.Column="1"  Padding="1" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="20" Foreground="White" IsTextScaleFactorEnabled="False"></TextBlock>
                                        <TextBlock Text="Capacity" Grid.Column="2"  Padding="1" HorizontalAlignment="Right" VerticalAlignment="Center"  FontSize="20" Foreground="White" IsTextScaleFactorEnabled="False"></TextBlock>
                                    </Grid>

                                </DataTemplate>
                            </ListView.HeaderTemplate>

                            <ListView.ItemContainerStyle>

                                <Style x:Name="shelfDetailsItemStyle" TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />


                                    <Setter x:Name="shelfDetailspaddinProperty" Property="Padding" Value="10,10,10,10"/>

                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="Height" Value="60"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="IsTextScaleFactorEnabled" Value="False"/>

                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Grid Background="White" x:Name="list">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding shelfName}" Foreground="#4169E1" Grid.Column="0"  IsTextScaleFactorEnabled="False"></TextBlock>
                                        <TextBlock Text="{Binding facing}" Foreground="Black" Grid.Column="1" HorizontalAlignment="Right" IsTextScaleFactorEnabled="False"></TextBlock>
                                        <TextBlock Text="{Binding capacity}" Foreground="Black" Grid.Column="2" HorizontalAlignment="Right" IsTextScaleFactorEnabled="False"></TextBlock>
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <Border x:Name="locationBorder" Background="White" BorderBrush="Black" BorderThickness="1">
                    
                    <StackPanel x:Name="locationPanel" Visibility="Collapsed">
                        
                        <Canvas VerticalAlignment="Top"  x:Name="locationCanvas" Background="#2566A2">
                            <TextBlock FontSize="20" Height="30" VerticalAlignment="Center" Margin="9,0,0,0" IsTextScaleFactorEnabled="False" x:Name="locationTextBlock" Foreground="White" Padding="1">Location</TextBlock>

                        </Canvas>
                        <ListView  x:Name="locationListView"  Height="Auto" ItemsSource="{Binding}">
                            
                            <ListView.ItemContainerStyle>
                                <Style x:Name="locationItemStyle" TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />


                                    <Setter x:Name="locationpaddinProperty" Property="Padding" Value="10,10,10,10"/>

                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="Height" Value="60"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
                                    <!--l,t,r,b-->
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>

                                <DataTemplate>

                                    <Grid Background="White" x:Name="list">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>

                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding index}" Foreground="#4169E1" Grid.Column="0" ></TextBlock>
                                        <TextBlock Text="{Binding loc}" Foreground="Black" Grid.Column="1" HorizontalAlignment="Right"></TextBlock>
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                            
                        </ListView>
                    </StackPanel>
                </Border>
                <Border x:Name="gapScanBorder" Background="White" BorderBrush="Black" BorderThickness="1">
                    <StackPanel x:Name="gapPanel" Visibility="Collapsed">
                        <Canvas VerticalAlignment="Top"  x:Name="gapScanCanvas" Background="#2566A2">
                            <TextBlock FontSize="20"  Height="30" VerticalAlignment="Center" Margin="9,0,0,0" IsTextScaleFactorEnabled="False" x:Name="gapScanTextBlock" Foreground="White" Padding="1">Gap Scan</TextBlock>
                        </Canvas>
                        <ListView  x:Name="gapScanListView"  Height="Auto" ItemsSource="{Binding}">

                            <ListView.ItemContainerStyle>
                                <Style x:Name="gapScanItemStyle" TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />


                                    <Setter x:Name="gapScanpaddinProperty" Property="Padding" Value="10,10,10,10"/>

                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="Height" Value="60"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
                                    <!--l,t,r,b-->
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="White" x:Name="list">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>

                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding gap}" IsTextScaleFactorEnabled="False" Foreground="#4169E1" Grid.Column="0" ></TextBlock>
                                        <TextBlock Text="{Binding desc}" Foreground="Black" IsTextScaleFactorEnabled="False" Grid.Column="1" HorizontalAlignment="Right"></TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
                <WebView x:ConnectionId='7' x:Name="WebViewControl"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
                                                               Height="400" RenderTransformOrigin="0.5,0" IsRightTapEnabled="False" IsHoldingEnabled="False" IsTapEnabled="False">

                    <WebView.RenderTransform>
                        <ScaleTransform ScaleX="1.0" ScaleY="1.0"></ScaleTransform>
                    </WebView.RenderTransform>
                </WebView>


            </StackPanel>

            <!--</Grid>-->


        </ScrollViewer>
        


        <!-- Drawer Layout -->
        <drawerLayout:DrawerLayout Grid.Row="1"  x:Name="DrawerLayout">
            <Grid x:Name="MainFragment"  Background="White" Opacity="0" Margin="0,50,0,0" Visibility="Collapsed" VerticalAlignment="Top">
                <ProgressRing x:Name="p_ring" Foreground="White" HorizontalAlignment="Center"  Width="100" Height="100" />
            </Grid>

            <Grid x:Name="ListFragment" Margin="0,0,0,0" VerticalAlignment="Top">
                <ScrollViewer>
                    <Grid Background="#4B545C">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="60" />
                            <RowDefinition Height="60" />
                            <RowDefinition Height="60" />
                            <RowDefinition Height="60" />
                            <RowDefinition Height="60" />
                            <RowDefinition Height="60" />
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="name" Background="Transparent" Grid.Row="1" >
                            <Border BorderBrush="#FFE0E0E0" BorderThickness="0 0 1 1" />
                            <StackPanel Margin="20 10 0 5"  VerticalAlignment="Center">
                                <TextBlock x:Name="menuName" Text="" Foreground="White"  VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="20" />
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="Item1" Background="Transparent" Grid.Row="3" >
                            <Border BorderBrush="#FFE0E0E0" BorderThickness="0 0 1 1" />
                            <StackPanel Orientation="Horizontal" Margin="20 10 0 5" VerticalAlignment="Center">
                                <!--<Image HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="42" Source="Assets/select.png" />-->
                                <TextBlock x:ConnectionId='6' Text="Select Store" Foreground="#999999" IsTextScaleFactorEnabled="False"  VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="20"                       />
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="Item3" Background="Transparent" Grid.Row="6">
                            <Border BorderBrush="#FFE0E0E0" BorderThickness="0 0 1 1" />
                            <StackPanel Orientation="Horizontal" Margin="20 10 0 5" VerticalAlignment="Center">
                                <!--<Image HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="42" Source="Assets/settings.png" />-->
                                <TextBlock x:ConnectionId='5' Text="About" Foreground="#999999" IsTextScaleFactorEnabled="False"  VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="20"               />
                            </StackPanel>
                        </Grid>
                       
                        <Grid x:Name="Item7" Background="Transparent" Grid.Row="4">
                            <Border BorderBrush="#FFE0E0E0" BorderThickness="0 0 1 1" />
                            <StackPanel Orientation="Horizontal" Margin="20 10 0 5" VerticalAlignment="Center">
                                <TextBlock x:ConnectionId='4' Text="Team Access" Foreground="#999999" IsTextScaleFactorEnabled="False"  VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="20"                    />
                            </StackPanel>
                    </Grid> 

                    <Grid x:Name="Item6" Background="Transparent" Grid.Row="5">
                            <Border BorderBrush="#FFE0E0E0" BorderThickness="0 0 1 1" />
                            <StackPanel Orientation="Horizontal" Margin="20 10 0 5" VerticalAlignment="Center">
                                <TextBlock x:ConnectionId='3' Text="Settings" Foreground="#999999" IsTextScaleFactorEnabled="False"  VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="20"                  />
                                <Image HorizontalAlignment="Left" Height="25" Margin="10,0,0,0" VerticalAlignment="Top" Width="20" Source="Assets/settings.png" />
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="Item2" Background="Transparent" Grid.Row="7" >
                            <Border BorderBrush="#FFE0E0E0" BorderThickness="0 0 1 1" />
                            <StackPanel Orientation="Horizontal" Margin="20 10 0 5" VerticalAlignment="Center">
                                <!--<Image HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="42" Source="Assets/logOut.png" />-->
                                <TextBlock x:ConnectionId='2' Text="Sign Out" Foreground="#999999" IsTextScaleFactorEnabled="False" VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="20"                      />
                                <Image HorizontalAlignment="Left" Height="25" Margin="10,0,0,0" VerticalAlignment="Top" Width="20" Source="Assets/logOut.png" />
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="Item5" Background="Transparent" Grid.Row="2" >
                            <Border BorderBrush="#FFE0E0E0" BorderThickness="0 0 1 1" />
                            <StackPanel Orientation="Horizontal" Margin="20 10 0 5" VerticalAlignment="Center">
                                <!--<Image HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="42" Source="Assets/compliance.png" />-->
                                <TextBlock x:ConnectionId='1' Text="Store Routines" Foreground="#999999" IsTextScaleFactorEnabled="False"  VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="20"                          />
                            </StackPanel>
                        </Grid>
                        
                    </Grid>
                </ScrollViewer>

            </Grid>
        </drawerLayout:DrawerLayout>
    </Grid>


</Page>

